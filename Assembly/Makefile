CC      =       gcc

NASM	=	nasm -f elf64

RM      =       rm -f

NAME	=	asm

all:
	$(NASM) srcs/strlen.S
	$(NASM) srcs/write.S
	$(NASM) srcs/memset.S
	$(NASM) srcs/strnlen.S
	$(NASM) srcs/strcmp.S
	$(NASM) srcs/strncmp.S
	$(NASM) srcs/strchr.S
	$(NASM) srcs/memcpy.S
	$(NASM) srcs/memmove.S
	$(NASM) srcs/strcasecmp.S
	$(NASM) srcs/rindex.S
	$(NASM) srcs/strstr.S
	$(NASM) srcs/strpbrk.S
	$(NASM) srcs/strcspn.S
	$(NASM) srcs/memchr.S
	$(NASM) srcs/strcat.S
	gcc -g3 -o $(NAME) asm_tester.c srcs/*.o

clean:
	$(RM) srcs/*.o

fclean: clean
	$(RM) $(NAME)

re:     fclean all

.PHONY:         clean fclean all re
